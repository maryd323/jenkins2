pipeline{
   agent any
   environment {
      wasPassword       = 'wpsadmin'
      portalPassword    = 'wpsadmin'
      appName           = 'CustomHTMLEditor'
      earFileName       = 'CustomHTMLEditor.ear'
      antHome           = tool 'Ant'
   }
   stages {
      stage('Retrieve') { 
         steps {
            git 'https://github.com/maryd323/jenkins2.git'
         }
      }
      stage('Build') {
         steps {
            sh "'${antHome}/bin/ant' makezips"
         }
      }
      stage('Store') {
         steps {
            archiveArtifacts 'build/dist/*.ear'
         }
      }
      stage('Publish'){
         steps {
            script {
               openshift.logLevel(level:10):void
               openshift.withCluster() {
               openshift.withProject("dx-deploy-dev") {
                  withCredentials([string(credentialsId: 'maryd323', variable: 'TOKEN')]){
                     sh '''
                        set +x
                        curl -H "Authorization: Bearer yLZCSj5Vgr_R2r78tJhHOSjhiRqoF1O5qsEnkH9nlfU" "https://api.hcl-dxdev.hcl-dx-dev.net:6443/apis/user.openshift.io/v1/users/~"
                     '''
                     sh "'oc exec -it ${deployment_instance} /bin/bash'"
                     sh "'ls /opt/HCL/wp_profile'"
                  }
               }
            }
         }
            sh "'env'"
            }
         }
      }
   }
