pipeline{
   agent any
   environment {
      wasPassword       = 'wpsadmin'
      portalPassword    = 'wpsadmin'
      appName           = 'CustomHTMLEditor'
      earFileName       = 'CustomHTMLEditor.ear'
      antHome           = tool 'Ant'
   }
   stages {
      stage('Log Entry') { 
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                     echo "Building: ${appName} in project: ${openshift.project()}."
                  }
               }
            }
         }
      }      
      stage('Checkout') { 
         steps {
            git 'https://github.com/maryd323/jenkins2.git'
         }
      }
      stage('Build') {
         steps {
               sh "'${antHome}/bin/ant' makezips"
         }
      }
      stage('Archive') {
         steps {
            archiveArtifacts 'build/dist/*.ear'
            script {
               copyArtifacts filter: 'build/dist/*.ear', 
               fingerprintArtifacts: true, 
               projectName: 'build-custom-editor-app', 
               selector: upstream(fallbackToLastSuccessful: true)
            }
         }
      } 
      stage('Deliver') {
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                  def result = openshift.raw ( 'cp', 'local.file dest.dir')
                  echo "Delivery Status:  ${result.out}"
                  }
               }
            }
         }
      }        
//      stage('Deploy'){
//         steps {
//            build 'deploy-custom-editor-app'
//            //sh "'env'"
//            }
//      }
      stage('Log Exit') { 
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                     echo "Completed build, deployment and delivery of ${appName} in project: ${openshift.project()}."
                  }
               }
            }
         }
      }  
   }
}
