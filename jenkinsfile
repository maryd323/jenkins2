pipeline{
   agent any
   parameters {
      string(name: 'custom_app_workspace', defaultValue: '${WORKSPACE}', description: 'Shared Workspace Directory')
   }
   environment {
      wasPassword       = 'wpsadmin'
      portalPassword    = 'wpsadmin'
      appName           = 'CustomHTMLEditor'
      earFileName       = 'CustomHTMLEditor.ear'
      antHome           = tool 'JenkinsAnt'
   }
   stages {
      stage('Log Entry') { 
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                     echo "Building: ${appName} in project: ${openshift.project()}."
                  }
               }
            }
         }
      }      
      stage('Checkout') { 
         steps {
            git 'http://github.com/maryd323/jenkins2.git'
         }
      }
      stage('Build') {
         steps {
               sh "'${antHome}/bin/ant' makezips"
         }
      }
      stage('Archive') {
         steps {
            archiveArtifacts 'build/dist/*.ear'
            //sh "'env'"
         }
      } 
      stage('Deliver') {
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                  def result = openshift.raw ( 'cp', '${WORKSPACE}/build/dist/${earFileName} dx-deployment-0:/opt/HCL/wp_profile/customApps/')
                  echo "Delivery Status:  ${result.out}"
                  }
               }
            }
         }
      }        
      stage('Deploy'){
         steps {
            sh "'env'"
            sh "'echo ${custom_app_workspace}'"
//            build 'deploy-custom-editor-app'
            }
      }
      stage('Log Exit') { 
         steps {
            script {
               openshift.withCluster() {
                  openshift.withProject() {
                     echo "Completed build, delivery and deployment of ${appName} in project: ${openshift.project()}."
                  }
               }
            }
         }
      }  
   }
}
